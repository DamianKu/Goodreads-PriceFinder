{
  "manifest_version": 2,
  "name": "Goodreads PriceFinder",
  "version": "0.1",
  "description": "Some Description",
  "permissions": [
    "*://*/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "static/js/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "browser-polyfill.js",
        "static/js/content.js"
      ],
      "css": ["./static/css/content.css"],
      "matches": [
        "http://www.goodreads.com/*",
        "https://www.goodreads.com/*"
      ]
    }
  ],
  "icons": {
    "192": "logo192.png"
  },
  "browser_action": {
    "default_icon": {
      "192": "logo192.png"
    },
    "default_title": "Popup",
    "default_popup": "popup.html"
  }
}
